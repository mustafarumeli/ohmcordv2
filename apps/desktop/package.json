{
  "name": "@ohmcord/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "concurrently -n vite,electronBuild,electron -c cyan,magenta,green \"vite --port 5173\" \"tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist-electron --sourcemap --watch --external electron\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.cjs\"",
    "build": "vite build && tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist-electron --sourcemap --external electron",
    "package:win": "npm run build && electron-builder --win",
    "start": "electron dist-electron/main.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "build": {
    "appId": "com.ohmcord.desktop",
    "productName": "Ohmcord",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "Ohmcord-${version}-portable.exe"
    }
  },
  "dependencies": {
    "@jitsi/rnnoise-wasm": "^0.2.1",
    "firebase": "^12.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "yet-another-react-lightbox": "^3.29.1"
  },
  "devDependencies": {
    "@types/audioworklet": "^0.0.95",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "cross-env": "^10.1.0",
    "electron": "40.4.1",
    "electron-builder": "^26.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
